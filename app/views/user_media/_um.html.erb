<li class="medium-list-show" value="<%= medium.id %>">
  <%= medium.name %>
  <form action="<%= user_user_medium_url(
          user,
          UserMedium.where(
            user_id: user.id,
            medium_id: medium.id)[0]) %>"
        id="medium-delete"
        method="post"
        data-remote="true">
    <input
       name="_method"
       type="hidden"
       value="delete">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete">
  </form>
</li>

<style>

.medium-list-show {
}

.medium-list-show > form {
  display: inline;
}

.medium-list-show > form input[type="submit"] {
  font-size: 14px;
  padding: 2px;
  margin: 5px auto;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

.medium-list-show > form input[type="submit"]:hover {
  background-color: #FF6600;
  border: 2px solid #E3E3E3;
  color: #E3E3E3;
}
</style>
