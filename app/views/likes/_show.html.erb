<% like = Like.where(user_id: current_user,
                 likeable_id: type.id,
                 likeable_type: type.class.to_s)[0] %>
<% if like %>
  <%= render "likes/unlike", type: type, like: like %>
<% else %>
  <%= render "likes/form", type: type, sub_type: sub_type%>
<% end %>

<style>

.like > form input[type="submit"] {
  display: inline;
  float: left;
  font-size: 10px;
  border: 2px solid #FF6600;
  border-radius: 2px;
  background: #464646;
  padding: 1px;
  margin-left: 10px;
  color: #E3E3E3;
}

.like > form input[type="submit"]:hover {
  border: 2px solid #E3E3E3;
  background-color: #FF6600;
  color: #E3E3E3;
}

.like-count {
  float: left;
  padding: 3px;
  font-size: 12px;
}

</style>