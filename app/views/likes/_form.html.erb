<form
  action="<%= likes_url %>"
  class="button_to like-form<%= type.id %>"
  method="post"
  data-remote="true">

  <input name="like[likeable_id]"
         type="hidden"
         value="<%= type.id %>">
  <input name="like[likeable_type]"
         type="hidden"
         value="<%= type.class.to_s %>">
  <input name="like[user_id]"
         type="hidden"
         value="<%= current_user.id %>">
  <input name="receiver_id"
         type="hidden"
         value="<%= !@sub_type.nil? ? @sub_type.id : type.id %>">
	<span class="like-count"><%= type.likes.length %></span>
  <input type="image" alt="Submit" src='/assets/like_orange.png'>
  <input name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">
</form>


<script>

$(document).ready(function(){

  $(".like-form<%= type.id %>").on("ajax:success", function(event, data){
    $like = $($(event.target).parent()[0])
		console.log("TOP");
		console.log($like);
		console.log("BOT");
    $like.html(data);
  });

});

</script>

<style>

.like-div {
	display: inline;
}

.like-div > form {
	display: inline;
}

</style>