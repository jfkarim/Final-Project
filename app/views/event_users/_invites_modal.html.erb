<div class="modal fade" id="invitesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog event-invites-box group">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Invitations</h4>
      </div>
      <div class="modal-body invites-content">
			  <ul class="group">
			    <% current_user.approved_friends.each do |user| %>
			      <% unless user == current_user %>
			        <li class="group">
			          <%= image_tag user.profile_picture.url(:icon) %>
			          <%= link_to user.artist_name, user_url(user) %>
			          <div class="invite-status">
			            <% if @event.pending_users.include?(user) %>
			              <p class="invited">Invited</p>
			            <% else %>
			              <form
			                action="<%= event_event_users_url(@event) %>"
			                method="post"
			                class="invite-button"
			                data-remote="true">
			                <input
			                  name="authenticity_token"
			                  type="hidden"
			                  value="<%= form_authenticity_token %>">

			                <input
			                  id="user_id"
			                  name="user_id"
			                  type="hidden"
			                  value="<%= user.id %>">

			                <input type="submit" value="Invite">
			              </form>
			          <% end %>
			          </div>
			        </li>
			      <% end %>
			    <% end %>
			  </ul>
      </div>
      <div class="modal-footer">
        <%= link_to "Done", event_url(@event) %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>

<script>

$(document).ready(function(){

  $(".invite-button").on("ajax:success", function(event, data){
    $inviteStatus = $($(event.target).parent()[0])
    $inviteStatus.html("<p class='invited'>Invited</p>");
  });

});

</script>

<style>
.event-invites-box {
	width: 400px;
}

.event-invites-box > .modal-content {
	border-radius: 0;
	border: 2px solid #ed9a32;
}

.invites-content > h3 {
	font-size: 12pt;
}

.invites-content > h3:first-child {
	margin-top: 0;
}

.invites-content > ul {
	padding-left: 10px;
}

.invites-content > ul > li {
	width: 100%;
}

.invites-content > ul > li > img {
	float: left;
}

.invites-content > ul > li > a {
	padding: 5px;
	font-weight: 12pt;
	float: left;
}

.invites-content > ul > li > form {
	display: inline;
	float: right;
}

.invite-status {
	display: inline;
	float: right;
}
</style>