<div class="modal fade" id="eventEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog event-edit-box group">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Event</h4>
      </div>
			<div class="modal-body">
			  <form
			    action="<%= event_url(@event) %>"
			    method="post"
			    class="event-form">
				    <input
				      name="_method"
				      type="hidden"
				      value="put">
				    <input
				      name="authenticity_token"
				      type="hidden"
				      value="<%= form_authenticity_token %>">
							
			      <label class="event-input-label">Name
				      <input
				        class="input-bar"
				        name="event[name]"
				        type="text"
				        value="<%= @event.name %>">

			      <label class="event-input-label">Description
				      <input
				        type="text"
				        class="input-bar"
				        name="event[description]"
				        value="<%= @event.description %>">
						</label>

				    <label class="event-input-label">Location
				      <input
				        type="text"
				        class="input-bar"
				        name="event[address]"
				        value="<%= @event.address %>">
						</label>
			      <label class="event-input-label">When
				      <input
				        type="date"
				        class="input-date"
				        name="event[date]"
				        value="<%= @event.date %>">
				      <input
				        type="time"
				        class="input-time"
				        name="event[time]"
				        value="<%= @event.time %>">
								<!-- FIX TIME ISSUE -->
						</label>
				    <input type="submit" id="updateEvent" value="Update Event">
			  </form>
			  <form action="<%= event_url(@event) %>" method="post">
			    <input type="hidden" name="_method" value="DELETE">
			    <input
			      name="authenticity_token"
			      type="hidden"
			      value="<%= form_authenticity_token %>">

			    <input type="submit" id="deleteEvent" value="Cancel Event">
			  </form>
			</div>
		</div>
  </div>
</div>