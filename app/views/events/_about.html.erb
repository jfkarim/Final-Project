<div class="event-attributes group">
	<div class="attribute-section group">
		<h3 class="attribute-overview">Description</h3>
		<p><%= event.description %></p>
	</div>

	<div class="attribute-section group">
		<h3 class="attribute-overview">Where</h3>
		<p><%= event.address %></p>
	</div>

	<div class="attribute-section group">
		<h3 class="attribute-overview">When</h3>
		<p><%= event.date.to_formatted_s(:long) %></p>
		<p><%= event.time.strftime('%I:%M %p') %></p>
	</div>
	<a data-toggle="modal" class="edit-anything-link" data-target="#eventEditModal">Edit About</a>
</div>


<script>

$(document).ready( function () {

  $(".attribute-overview").click(function () {
    $list = $(this).next();
    $list.toggle();
  });

});

</script>



<style>
.event-attributes {
	width: 600px;
	height: 100px;
}

.attribute-section {
	width: 125px;
	margin: 0 10px;
	float: left;
}

.attribute-overview {
	font-size: 10pt;
	margin: 5px 0;
}

.attribute-list {
	padding-left: 0;
}

.attribute-show {
	font-size: 8pt;
}

a[data-target="#eventEditModal"] {
	float: right;
}

</style>