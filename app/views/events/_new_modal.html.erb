<div class="modal fade" id="eventCreateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog event-new-box group">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Event</h4>
      </div>
				<div class="modal-body group">
					<form action="<%= events_url %>" method="post" class="event-form">
				    <input
				      name="authenticity_token"
				      type="hidden"
				      value="<%= form_authenticity_token %>">
							
			      <label class="event-input-label">Title
				      <input
				        class="input-bar"
				        name="event[name]"
				        type="text">
						</label>
			      <label class="event-input-label">Description
				      <input
				        type="text"
				        class="input-bar"
				        name="event[description]"
						</label>

				    <label class="event-input-label">Where
				      <input
				        type="text"
				        class="input-bar"
				        name="event[address]">
						</label>

			      <label class="event-input-label">When
				      <input
				        type="date"
				        class="input-date"
				        name="event[date]">
				      <input
				        type="time"
				        class="input-time"
				        name="event[time]">
						</label>
				    <input type="submit" id="createEvent" value="Create Event">
				  </form>
				</div>
			</div>
		</div>
  </div>
</div>

<style>

.event-new-box {
	width: 400px;
}

.event-new-box > .modal-content {
	border: 2px solid #ed9a32;
	border-radius: 0;
}

.event-input-label {
	width: 100%;
	margin: 5px 0;
}

.event-input-label > input {
	float: right;
	background: transparent;
	border: 2px solid #eee;
}

.input-bar {
	width: 250px;
}

.input-date {
	display: inline;
	width: 150px;
}

.input-time {
	display: inline;
	width: 95px;
	margin-right: 5px;
}

#createEvent {
	clear: both;
	float: right;
	margin-top: 10px;
	background: #aedaff;
	border: 1px solid #ccc;
	border-radius: 3px;
	color: #fff;
	font-size: 10pt;
	padding: 2px 15px;
}

</style>