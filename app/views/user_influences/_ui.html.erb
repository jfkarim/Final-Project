<li class="influence-list-show group" value="<%= influence.id %>">
  <%= influence.name %>

  <form action="<%= user_user_influence_url(
          user,
          UserInfluence.where(
            user_id: user.id,
            influence_id: influence.id)[0]) %>"
        id="influence-delete"
        method="post"
        data-remote="true">
    <input
       name="_method"
       type="hidden"
       value="delete">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete">
  </form>
</li>

