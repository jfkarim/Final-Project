<li class="theme-list-show group" value="<%= theme.id %>">
  <%= theme.name %>
  <form action="<%= user_user_theme_url(
          user,
          UserTheme.where(
            user_id: user.id,
            theme_id: theme.id)[0]) %>"
        id="theme-delete"
        method="post"
        data-remote="true">
    <input
       name="_method"
       type="hidden"
       value="delete">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
    <%= image_submit_tag("delete.png") %>
  </form>
</li>

