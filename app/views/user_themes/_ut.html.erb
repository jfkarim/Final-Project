<li class="theme-list-show" value="<%= theme.id %>">
  <%= theme.name %>
  <form action="<%= user_user_theme_url(
          user,
          UserTheme.where(
            user_id: user.id,
            theme_id: theme.id)[0]) %>"
        id="theme-delete"
        method="post"
        data-remote="true">
    <input
       name="_method"
       type="hidden"
       value="delete">
    <input
       name="authenticity_token"
       type="hidden"
       value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete">
  </form>
</li>

<style>

.theme-list-show {
}

.theme-list-show > form {
  display: inline;
}

.theme-list-show > form input[type="submit"] {
  font-size: 14px;
  padding: 2px;
  margin: 5px auto;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

.theme-list-show > form input[type="submit"]:hover {
  background-color: #FF6600;
  border: 2px solid #E3E3E3;
  color: #E3E3E3;
}
</style>