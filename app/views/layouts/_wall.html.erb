<ul class="wall-show">
  <% owner.wall.posts.each do |post| %>
    <%= render "posts/show", owner: owner, post: post %>
  <% end %>
</ul>

<script>

$(document).ready(function(){

  $(".post-form").on("ajax:success", function(event, data){
    $(".wall-show").prepend(data);
  });

  $(".status-form").on("ajax:success", function(event, data){
    $(".wall-show").prepend(data);
  });

});

</script>

