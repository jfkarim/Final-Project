<div class="modal fade" id="friendsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Friends</h4>
      </div>
			<div class="modal-body">
				<ul class="friends-list">
				  <% current_user.approved_friends.each do |friend| %>
				    <li>
				      <%= link_to friend.artist_name, user_url(friend) %>
				    </li>
				  <% end %>
				</ul>
	    </div><!-- /.modal-body -->
		</div>
  </div>
</div>