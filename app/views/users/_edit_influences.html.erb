<ul class="influences-list">
  <% user.influences.each do |influence| %>
    <%= render "user_influences/ui", user: user, influence: influence %>
  <% end %>
</ul>

<form
  action="<%= user_user_influences_url(user) %>"
  method="post"
  id="new-inf"
  data-remote="true">

  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input
     id="influence_name"
     name="influence[name]"
     placeholder="New Influence"
     type="text">
  <input type="submit" value="Create">
</form>

<script>

$(document).ready(function(){

  $(".influences-list").on("ajax:success", "#influence-delete", function(event, data){
    $($(event.target).parent()[0]).remove()
  });


  $("#new-inf").on("ajax:success", function(event, data){
    var $form = $(this);
    $(".influences-list").append(data);
    $form[0].reset();
  });

});

</script>

<style>
#new-inf input[type="text"] {
  display: inline;
  padding: 2px;
  width: 150px;
  margin: 0;
  border: 2px solid #FF6600;
  border-radius: 2px;
  background-color: #5B605F;
  font-size: 14px;
  color: #E3E3E3;
}

#new-inf input[type="submit"] {
  display: inline;
  font-size: 14px;
  padding: 2px;
  margin: 10px auto;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

#new-inf input[type="submit"]:hover {
  background-color: #FF6600;
  border: 2px solid #E3E3E3;
  color: #E3E3E3;
}

</style>