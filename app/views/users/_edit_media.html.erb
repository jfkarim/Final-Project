<ul class="media-list">
  <% user.media.each do |medium| %>
    <%= render "user_media/um", medium: medium, user: user %>
  <% end %>
</ul>

<form action="<%= user_user_media_url(user) %>"
  method="post"
  id="new-med"
  data-remote="true">

  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <input
     id="medium_name"
     name="medium[name]"
     placeholder="New Medium"
     type="text">
  <input type="submit" value="Create">
</form>

<script>

$(document).ready(function(){

  $(".media-list").on("ajax:success", "#medium-delete", function(event, data){
    $($(event.target).parent()[0]).remove()
  });

  $("#new-med").on("ajax:success", function(event, data){
    var $form = $(this);
    $(".media-list").append(data);
    $form[0].reset();
  });

});

</script>

<style>
#new-med input[type="text"] {
  display: inline;
  padding: 2px;
  width: 150px;
  margin: 0;
  border: 2px solid #FF6600;
  border-radius: 2px;
  background-color: #5B605F;
  font-size: 14px;
  color: #E3E3E3;
}

#new-med input[type="submit"] {
  display: inline;
  font-size: 14px;
  padding: 2px;
  margin: 10px auto;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

#new-med input[type="submit"]:hover {
  background-color: #FF6600;
  border: 2px solid #E3E3E3;
  color: #E3E3E3;
}

</style>