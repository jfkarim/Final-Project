<ul class="albums-dropdown">
  <% if is_page_owner?(user) %>
  <li>
    <%= link_to "Create Album", new_user_album_url(user) %>
  </li>
  <% end %>
  <% user.albums.each do |album| %>
    <li>
      <%= link_to album.title, user_album_url(user, album) %>
    </li>
  <% end %>
</ul>

<style>

.albums-dropdown > li {
  width: 100%;
  border-bottom: 3px solid #FF6600;
  background: #5B605F;
}

.albums-dropdown > li:last-child {
  border-bottom: 0;
}

.albums-dropdown > li:hover > a {
  color: #E3E3E3;
}

</style>