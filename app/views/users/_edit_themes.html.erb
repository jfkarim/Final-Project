<ul class="theme-list">
  <% user.themes.each do |theme| %>
    <li class="theme-list-show" value="<%= theme.id %>">
      <%= theme.name %>

      <form action="<%= user_user_theme_url(
              user,
              UserTheme.where(
                user_id: user.id,
                theme_id: theme.id)[0]) %>"
            id="theme-delete"
            method="post">
        <input
           name="_method"
           type="hidden"
           value="delete">
        <input
           name="authenticity_token"
           type="hidden"
           value="<%= form_authenticity_token %>">
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>

<form action="<%= user_user_themes_url(user) %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <label for="theme_name">New Theme</label>
  <input
     id="theme_name"
     name="theme[name]"
     type="text">
  <br>
  <input type="submit" value="Create">
</form>
