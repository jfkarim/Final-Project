<form action="<%= user_friendship_url(user, Friendship.where(
        out_friend_id: user.id,
        in_friend_id: current_user.id)[0]) %>"
      id="remove-friend"
      method="post"
      data-remote="true">
  <input
     name="_method"
     type="hidden"
     value="delete">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
  <input type="submit" value="Remove Friend">
</form>

<script>

$(document).ready(function() {

  $("#remove-friend").on("ajax:success", function(event, data){
    $(".friend-status").html(data);
  });

});

</script>

<style>

#remove-friend input[type="submit"] {
  display: block;
  padding: 5px;
  margin: 10px 0;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

#remove-friend input[type="submit"]:hover {
  background: #FF6600;
  border-color: #E3E3E3;
  color: #E3E3E3;
}

</style>