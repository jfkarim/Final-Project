<div class="group-top group">
  <h1 class="group-name group"><%= @group.name %></h1>
	<div class="group-info group">
	  <%= image_tag @group.admin.profile_picture.url(:standard) %>
	  <%= render "groups/about", group: @group %>
		<div class="members group">
	  	<p><span>Members</span>
			<% if @group.admin_id == current_user.id  %>
	      <%= link_to "Add Artists", new_group_group_user_url(@group) %>
	    <% end %>
			</p>
			<div class="members-status">
			  <h4>Admin</h4>
			  <ul>
			    <li><%= link_to @event.admin.artist_name, user_url(@event.admin) %></li>
			  </ul>
			  <h4>Members</h4>
        <ul>
          <% @group.approved_users.each do |user| %>
            <li><%= link_to user.artist_name, user_url(user) %></li>
          <% end %>
        </ul>
			</div>
		</div>
	</div>
</div>
<div class="wall">
  <h2 class="wall-head">Wall</h2>
  <div class="wall-body">
    <%= render "posts/form", owner: @group %>
    <%= render "layouts/wall", owner: @group %>
  </div>
</div>

<script>
$(document).ready(function() {
  $(".wall-head").click(function (){
    $wall = $(this).next();
    $wall.toggle();
  });

  $(".members-show > h3").click(function (){
    $canvas = $(this).next();
    $canvas.toggle();
  });

});
</script>

