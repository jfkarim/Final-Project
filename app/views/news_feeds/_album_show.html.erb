<% owner = User.find(album.user_id) %>

<li class="news-feed-album">
  <span class="artist-name"><%= image_tag owner.profile_picture.url(:icon) %> <%= owner.artist_name %></span> uploaded a new album:  <%= link_to album.title, user_album_url(owner, album) %> <br>
  <% if album.photos.length > 0 %>
    <div class="album-images">
      <ul class="group">
        <% for i in 0..3 %>
          <li class="album-image">
            <%= image_tag album.photos[i].picture.url(:standard) %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= album.created_at %><br>
  <div class="like">
    <%= render "likes/show", type: album, sub_type: nil %>
  </div>
  <ul class="comment-list">
    <% album.comments.reverse.each do |comment| %>
      <%= render "comments/show", owner: owner, comment: comment, type: album %>
    <% end %>
  </ul>
  <%= render "comments/form", owner: owner, type: album %>
</li>

<style>

.news-feed-album {
  width: 500px;
  padding: 5px;
  margin: 10px auto;
  border: 2px solid #5B605F;
  border-radius: 2px;
}

.album-images {
  width: 95%;
  margin: 5px auto;
}

.album-image {
  float: left;
  width: 100px;
  height: 100px;
  margin: 5px;
}

.album-image > img {
  width: 100%;
  height: 100%;
  border: 2px solid #FF6600;
}

.artist-name {
  color: #FF6600;
}

.artist-name > img {
  width: 30px;
  height: 30px;
  border: 2px solid #5B605F;;
}

</style>