<form
  action="<%= user_photo_url(user, photo) %>"
  method="post"
  class="photo-info-form">
  <input
    name="_method"
    type="hidden"
    value="put">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  <div class="input-field">
    <label class="input-label">Location (if applicable)</label>
    <input
      type="text"
      class="input-bar"
      name="photo[location]"
      value="<%= photo.location %>">
  </div>
  <div class="input-field">
    <label class="input-label">Description</label>
    <input
      type="text"
      class="input-bar"
      name="photo[description]"
      value="<%= photo.description %>">
  </div>
  <input type="submit" value="Save Changes">
</form>

