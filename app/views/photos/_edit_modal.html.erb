<div class="modal fade" id="photoEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit Photo</h4>
      </div>
				<form
				  action="<%= user_photo_url(@user, @photo) %>"
				  method="post"
				  class="photo-info-form">
					<div class="modal-body">
					  <input
					    name="_method"
					    type="hidden"
					    value="put">

					  <input
					    type="hidden"
					    name="authenticity_token"
					    value="<%= form_authenticity_token %>">
					  <div class="input-field">
					    <label class="input-label">Location (if applicable)</label>
					    <input
					      type="text"
					      class="input-bar"
					      name="photo[location]"
					      value="<%= @photo.location %>">
					  </div>
					  <div class="input-field">
					    <label class="input-label">Description</label>
					    <input
					      type="text"
					      class="input-bar"
					      name="photo[description]"
					      value="<%= @photo.description %>">
					  </div>						
			    </div><!-- /.modal-body -->
					<div class="modal-footer">
					  <input type="submit" value="Save Changes">
				</form>
						<%= button_to "Delete Photo", user_photo_url(@photo), method: :delete %>
					</div>
		</div>
  </div>
</div>

<script>

$(document).ready(function(){

  $(".edit-album-info").on("ajax:success", function(event, data){
    var $editInfo = $($(event.target).parent()[0])
    $editInfo.html(data);
    $(".edit-album-info").append("<p class='saved'>Saved</p>")
  });

});

</script>

