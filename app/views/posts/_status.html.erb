<form
  action="<%= posts_url %>"
  class="button_to status-form group"
  method="post"
	id="status-form"
  data-remote="true">

	<%= image_tag owner.profile_picture.url(:standard) %>
	<div class="post-options group">
		<select class="font-select" name="post[font]">
			<options>Basic</option>
		  <option value="Comic Sans MS">Comic Sans</option>
		  <option value="Wingdings">Wingdings</option>
		  <option value="Lucida Console">Console</option>
		  <option value="Playbill">Playbill</option>
		</select>
		<select class="color-select" name="post[color]">
			<options>Basic</option>
		  <option value="#1950A8">Blue</option>
		  <option value="#A023D9">Purple</option>
		  <option value="#97DB53">Green</option>
		  <option value="#D6312D">Red</option>
		</select>
	</div>
	<div class="status-enter">
	  <input type="text" class="status-input" name="post[content]" placeholder="Write New Post...">
	  <input name="post[wall_id]"
	         type="hidden"
	         value="<%= owner.wall.id %>">
	  <input name="receiver_id"
	         type="hidden"
	         value="<%= owner.id %>">
	  <input name="receiver_class"
	         type="hidden"
	         value="<%= owner.class.to_s %>">
	  <input name="post[user_id]"
	         type="hidden"
	         value="<%= current_user.id %>">
	  <input type="submit" value="Post">
	  <input name="authenticity_token"
	         type="hidden"
	         value="<%= form_authenticity_token %>">
	</div>
</form>