<form
  action="<%= posts_url %>"
  class="button_to post-form group"
  method="post"
  data-remote="true">

	<%= image_tag current_user.profile_picture.url(:standard) %>
	<div class="post-options group">
		<select class="font-select">
			<options>fonts</option>
		  <option value="volvo">font 1</option>
		  <option value="saab">font 2</option>
		  <option value="mercedes">font 3</option>
		  <option value="audi">font 4</option>
		</select>
		<select class="color-select">
			<options>colors</option>
		  <option value="volvo">color 1</option>
		  <option value="saab">color 2</option>
		  <option value="mercedes">color 3</option>
		  <option value="audi">color 4</option>
		</select>
	</div>
	<div class="post-enter">
	  <input type="text" class="post-input" name="post[content]" placeholder="Write New Post...">
	  <input name="post[wall_id]"
	         type="hidden"
	         value="<%= owner.wall.id %>">
	  <input name="receiver_id"
	         type="hidden"
	         value="<%= owner.id %>">
	  <input name="receiver_class"
	         type="hidden"
	         value="<%= owner.class.to_s %>">
	  <input name="post[user_id]"
	         type="hidden"
	         value="<%= current_user.id %>">
	  <input type="submit" value="Post">
	  <input name="authenticity_token"
	         type="hidden"
	         value="<%= form_authenticity_token %>">
	</div>
</form>