<li class="post-piece group">
  <div class="post-artist-name">
      <%= image_tag post.user.profile_picture.url(:standard) %><a><%= post.user.artist_name %></a> posted:
  </div>
	<div class="post-left group">
	  <p class="post-content-format"><%= post.content %></p>
	</div>
	<div class="post-right group">
	  <div class="post-info group">
	    <%= render "likes/show", type: post, sub_type: nil %>
			<span><%= post.created_at %></span>
	  </div>
		<div class="comment-list group">
			<%= render "comments/form", owner: owner, type: post %>
		  <ul class="comment-ul group">
		    <% post.comments.reverse.each do |comment| %>
		      <%= render "comments/show", owner: owner, comment: comment, type: post %>
		    <% end %>
		  </ul>
		</div>
	</div>
</li>

<style>

.post-piece {
	width: 800px;
}

.post-artist-name {
	color: #333;
	position: relative;
	right: 10px;
	margin-bottom: 5px;
	font-size: 14pt;
	vertical-align: bottom;
}

.post-artist-name > a {
	vertical-align: bottom;
	text-decoration: none;
	color: #ed9a32;
}

.post-artist-name > img {
	width: 100px;
	height: 100px;
	position: relative;
	top: 30px;
	right: 20px;
	border: 2px solid #afdaff;
	border-radius: 50px;
}

.album-images > ul {
	padding-left: 10px;
}

.album-image > img {
	width: 100px;
	height: 100px;
	border: 2px solid #ccc;
	margin: 1px;
	float: left;
}

.post-left {
	width: 460px;
	font-size: 14pt;
	float: left;
}

.post-content-format {
	padding: 20px;
	font-size: 20pt;
	background: #f6f6f6;
	border: 1px solid #ccc;
	height: 205px;
}

.post-right {
	width: 300px;
	float: left;
	margin-left: 20px;
}

.comment-list {
	background: #f6f6f6;
	padding: 5px;
	margin: 5px 0;
	border: 1px solid #ccc;
}

.comment-ul {
	padding-left: 20px;
	height: 140px;
	overflow: scroll;
}

.comment-form > input[type=text] {
	width: 205px;
}

.post-info {
	display: inline;
}

.post-info > form {
	display: inline;
}

</style>