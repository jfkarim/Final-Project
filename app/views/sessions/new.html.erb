  font-size: 20px;
  color: #E3E3E3;
}

.sign-in > form input[type="submit"] {
  display: block;
  width: 80px;
  padding: 5px 0;
  margin: 10px auto;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

.sign-in > form input[type="submit"]:hover {
  background: #464646;
}

.sign-in > a {
  display: block;
  width: 80px;
  padding: 5px 0;
  text-align: center;
  margin: 10px auto;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
  cursor: default;
}

.sign-in > a:hover {
  background: #464646;
}

</style>