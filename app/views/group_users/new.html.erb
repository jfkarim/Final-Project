<section class="page">
<h1 class="invite-people">Invite People To Group</h1>
<h3 class="artists-header">Artists</h3>
<ul>
  <% @users.each do |user| %>
    <% unless user == current_user %>
      <li>
        <%= image_tag user.profile_picture.url(:icon) %>
        <%= link_to user.artist_name, user_url(user) %>
        <div class="invite-status">
        <% if @group.pending_users.include?(user) %>
          <p class="invited">Invited</p>
        <% else %>
        <form action="<%= group_group_users_url(@group) %>" method="post" class="invite-button" data-remote="true">
          <input
             name="authenticity_token"
             type="hidden"
             value="<%= form_authenticity_token %>">

          <input
             id="user_id"
             name="user_id"
             type="hidden"
             value="<%= user.id %>">

          <input type="submit" value="Invite">
        </form>
        <% end %>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Done", group_url(@group) %>

</section>

<script>

$(document).ready(function(){

  $(".invite-button").on("ajax:success", function(event, data){
    $inviteStatus = $($(event.target).parent()[0])
    $inviteStatus.html("<p class='invited'>Invited</p>");
  });

});

</script>

<style>

.invite-people {
  font-size: 20px;
  color: #FF6600;
}

.artists-header {
  font-size: 18px;
  text-decoration: underline;
  color: #FF6600;
}

.invite-button input[type="submit"] {
  display: block;
  padding: 5px;
  margin: 10px 0;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

.invite-button input[type="submit"]:hover {
  background: #464646;
}

.invited {
  display: block;
  width: 50px;
  padding: 5px;
  margin: 10px 0;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}
</style>