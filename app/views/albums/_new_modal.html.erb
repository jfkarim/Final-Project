<div class="modal fade" id="albumCreateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog album-new-box group">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Album</h4>
      </div>
			<div class="modal-body group">
			  <form
			    action="<%= user_albums_url(current_user) %>"
			    method="post"
			    class="album-info-form">
					  <input
					    type="hidden"
					    name="authenticity_token"
					    value="<%= form_authenticity_token %>">
				    <label class="album-input-label">Title
				      <input
				        type="text"
				        class="input-bar"
				        name="album[title]">
						</label>
				    <label class="album-input-label">Description
				      <input
				        type="text"
				        class="input-bar"
				        name="album[description]">
						</label>
					  <input type="submit" id="createAlbum" value="Create Album">
				</form>
			</div>
		</div>
  </div>
</div>

<style>

.album-new-box {
	width: 400px;
}

.album-new-box > .modal-content {
	border: 2px solid #ed9a32;
	border-radius: 0;
}

.album-input-label {
	width: 100%;
}

.album-input-label > input {
	width: 250px;
	float: right;
	background: transparent;
	border: 2px solid #eee;
}

#createAlbum {
	display: inline;
	float: right;
	margin-top: 10px;
	background: #aedaff;
	border: 1px solid #ccc;
	border-radius: 3px;
	color: #fff;
	font-size: 10pt;
	padding: 2px 15px;
}

</style>