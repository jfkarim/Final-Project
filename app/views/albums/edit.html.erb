<h1>Edit Album/Add Photos</h1>

<form action="<%= user_album_url(@user, @album) %>" method="post">

  <input
     name="_method"
     type="hidden"
     value="put">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label>Title</label>
  <input type="text" name="album[title]" value="<%= @album.title %>">
  <br>
  <label>Description</label><br>
  <textarea name="album[description]" rows="4" cols="30">
    <%= @album.description %>
  </textarea>
  <br>
  <input type="submit" value="Save Changes">
</form>

<h2>Photos</h2>
<ul>
<% @album.photos.each do |photo| %>
  <li>
    <%= image_tag photo.picture.url(:standard) %><br>
        <%= link_to "Edit Photo", edit_user_photo_url(@user, photo) %>
  </li>
<% end %>
</ul>


<h3>Add Photo</h3>

<form action="<%= user_photos_url %>" method="post" enctype="multipart/form-data">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  <input type="file" name="photo[picture]"><br>
  <input type="hidden" name="photo[album_id]" value="<%= @album.id %>">
  <input type="submit" value="Add Photo">
</form>

<%= button_to "Delete Album", user_album_url(@album), method: :delete %>