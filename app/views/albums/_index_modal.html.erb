<div class="modal fade" id="albumIndexModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog album-index-box group">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Albums</h4>
      </div>
			<div class="modal-body group">
				<ul class="albums-list-modal group">
				  <% @user.albums.each do |album| %>
				    <li class="group">
				      <h3><%= link_to album.title, user_album_url(@user, album) %></h3>
							<ul class="album-index-photos group">
				        <% for i in 0..3 %>
									<% if album.photos[i].nil?  %>
										<% break %>
									<% end %>
				          <li class="album-index-image">
				            <%= image_tag album.photos[i].picture.url(:standard) %>
				          </li>
				        <% end %>
							</ul>
				    </li>
				  <% end %>
				</ul>
	    </div>
		</div>
  </div>
</div>