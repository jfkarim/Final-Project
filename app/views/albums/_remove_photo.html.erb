<form
  action="<%= user_photo_url(user, photo) %>"
  class="photo-delete"
  method="post"
  data-remote="true">

  <input
    name="_method"
    type="hidden"
    value="delete">

  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">

  <input type="submit" value="Remove Photo">
</form>

<script>

$(document).ready(function(){

  $(".photo-delete").on("ajax:success", function(event, data){
    console.log($(event.target).parent()[0])
    $($($(event.target).parent()[0]).parent()[0]).remove()
  });

});

</script>