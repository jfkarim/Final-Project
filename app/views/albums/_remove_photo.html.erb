<form action="<%= user_photo_url(user, photo) %>"
      class="photo-delete"
      method="post"
      data-remote="true">
  <input
     name="_method"
     type="hidden"
     value="delete">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
  <input type="submit" value="Remove Photo">
</form>

<style>

.photo-delete {
  display: inline;
}

.photo-delete input[type="submit"] {
  font-size: 14px;
  padding: 5px;
  margin: 10px 0;
  background: #5B605F;
  color: #FF6600;
  border: 2px solid #FF6600;
  border-radius: 2px;
}

.photo-delete input[type="submit"]:hover {
  background: #464646;
}

</style>