

<h1 class="album-title"><%= @album.title %></h1><br>

<h3 class="photos-header">Photos</h3>
<ul class="photos-list album-photos group">
  <% @album.photos.each do |photo| %>
    <li>
      <a href="<%= user_photo_url(@user, photo) %>">
        <%= image_tag photo.picture.url %>
      </a><br>
    </li>
  <% end %>
</ul>

<%= link_to "Edit Album", edit_user_album_url(@user, @album) %>
<div class="album-info">
  <p><%= @album.description %></p>
    <div class="like group">
      <%= render "likes/show", type: @album, sub_type: nil %>
    </div>
</div>

<h2 class="comment-header">Comments:</h2>
<div class="comments-list group">
  <ul class="comment-ul album-comments group">
    <% @album.comments.reverse.each do |comment| %>
      <%= render "comments/show", owner: @user, comment: comment, type: @album %>
    <% end %>
  </ul>
  <%= render "comments/form", owner: @user, type: @album %>
</div>

<script>

$(document).ready( function () {

  $(".comment-header").click(function () {
    $comments = $(this).next();
    $comments.toggle();
  });

});

</script>

<style>

.photos-list {
	width: 850px;
	margin: 20px 10px;
	padding-left: 0;
}

.photos-list > li {
	float: left;
	margin: 5px;
}

.photos-list > li > a > img {
	border: 2px solid #ccc;
}

</style>